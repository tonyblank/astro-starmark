# StarMark Integration - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Linear integration (BurningTorch team)
LINEAR_API_KEY=lin_api_your_key_here
LINEAR_TEAM_ID=your-team-id-here

# Auth0 integration (free plan)
# Create an API in your Auth0 dashboard and use its identifier as the audience
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your_client_id_here
AUTH0_CLIENT_SECRET=your_client_secret_here
AUTH0_AUDIENCE=https://api.starmark.dev

# Development environment
NODE_ENV=development
PUBLIC_SITE_URL=http://localhost:4321
PUBLIC_SITE_DOMAIN=starmark.dev

# Debug logging (optional)
DEBUG=starmark:*

# CI/CD environment (for GitHub Actions)
CI=false
COVERAGE_THRESHOLD=90
PLAYWRIGHT_BROWSERS_PATH=./browsers 